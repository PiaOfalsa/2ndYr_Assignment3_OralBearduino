<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    tools:context="brushing.oral_bear_1.MusicFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/play_but"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_toLeftOf="@+id/pause_but"
            android:layout_toStartOf="@+id/pause_but"
            android:background="@color/colorPrimary"
            android:text="PLAY"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            android:textStyle="bold" />


        <pl.droidsonroids.gif.GifTextView
            android:id="@+id/gifTextView"
            android:layout_width="310dp"
            android:layout_height="300dp"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/gif_file" />

        <Button
            android:id="@+id/pause_but"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/textView2"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:background="@android:color/holo_orange_dark"
            android:text="PAUSE"
            android:textColor="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:text="@string/instruct_str"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>

</FrameLayout>
